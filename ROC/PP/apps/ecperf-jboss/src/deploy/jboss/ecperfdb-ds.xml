<!--  Datasource config for Oracle originally from Steven Coy             -->
<!-- ==================================================================== -->


<datasources>
  <local-tx-datasource>
    <jndi-name>ECPerfDS</jndi-name>
    <connection-url>@jdbc.url@</connection-url>
    <driver-class>@jdbc.classname@</driver-class>
    <user-name>@jdbc.userid@</user-name>
    <password>@jdbc.password@</password>
    <max-pool-size>399</max-pool-size>
    <min-pool-size>50</min-pool-size>
  </local-tx-datasource>

</datasources>
