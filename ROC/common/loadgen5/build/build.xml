
<project name="MyProject" default="dist" basedir="..">
    <description>
        simple example build file
    </description>
  <!-- set global properties for this build -->
  <property name="project.name" value="loadgen5"/>

  <property name="src" location="src/main"/>
  <property name="build" location="build/output"/>
  <property name="dist"  location="dist"/>

  <property name="roc.root" location="../../"/>
  <property name="roc.common" value="${roc.root}/common"/>

  <path id="roc.classpath">
    <fileset dir="${roc.common}/swig-util/dist/lib">
      <include name="**/*.jar"/>
    </fileset>
  </path>

  <path id="thirdparty.classpath">
    <fileset dir="${roc.common}/swig-util/dist/lib/">
      <include name="**/*.jar"/>
    </fileset>
  </path>

  <!-- The classpath -->
  <path id="javac.classpath">
    <path refid="roc.classpath"/>
    <path refid="thirdparty.classpath"/>
  </path>

  <target name="init">
    <!-- Create the time stamp -->
    <tstamp/>
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init"
        description="compile the source " >
    <!-- Compile the java code from ${src} into ${build} -->
    <javac debug="true" srcdir="${src}" destdir="${build}">
      <classpath refid="javac.classpath"/>
    </javac>
  </target>

  <target name="dist" depends="compile"
        description="generate the distribution" >
    <!-- Create the distribution directory -->
    <mkdir dir="${dist}/lib"/>

    <!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
    <jar jarfile="${dist}/lib/${project.name}.jar" basedir="${build}"/>
  </target>

  <target name="clean"
        description="clean up" >
    <!-- Delete the ${build} and ${dist} directory trees -->
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
</project>
