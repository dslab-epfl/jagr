<!-- An application descriptor to package RUBiS as microcomponents -->

<application>
  <display-name>RubisEAR</display-name>
  <description>The RR-ified version of RUBiS.</description>

  <module>
    <ejb>rBid.jar</ejb>
  </module>

  <module>
    <ejb>rBuyNow.jar</ejb>
  </module>

  <module>
    <ejb>rCategory.jar</ejb>
  </module>

  <module>
    <ejb>rComment.jar</ejb>
  </module>

  <module>
    <ejb>rIDManager.jar</ejb>
  </module>

  <module>
    <ejb>rItem.jar</ejb>
  </module>

  <module>
    <ejb>rOldItem.jar</ejb>
  </module>

  <module>
    <ejb>rOther.jar</ejb>
  </module>

  <module>
    <ejb>rQuery.jar</ejb>
  </module>

  <module>
    <ejb>rRegion.jar</ejb>
  </module>

  <module>
    <ejb>rUser.jar</ejb>
  </module>

  <module>
    <web>
      <web-uri>ejb_rubis_web.war</web-uri>
      <context-root>ejb_rubis_web</context-root>
    </web>
  </module>

</application>

